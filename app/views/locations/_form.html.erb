<%= form_with model: location, local:true do |f| %>
  <div class="field">
    <div class="control">
        <%= f.label :city %>
        <%= f.text_field :city, required: true %>
     </div>
    </div>

   <div class="field">
    <div class="control">
    
     <% if @request && @request.include?("edit")%>
      <fieldset disabled>
        <%= f.label :country %>
        <%= f.text_field :country, required: true, readonly: true %>
      </fieldset> 
     <% else %>
     <%= f.label :country %>
      <%= f.text_field :country, required: true %>
      <% end %>
     </div>
    </div>

  <!-- continent is added after validated with countries gem see e.g. in model --> 

    <div class="buttons">
    <%= f.submit "Submit", { class: 'button is-danger' } %>
    </div><br>
<% end %>