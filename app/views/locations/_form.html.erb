<%= form_with model: location, local:true do |f| %>
  <div class="field">
    <div class="control">
        <%= f.label :city %>
        <%= f.text_field :city %>
     </div>
    </div>

   <div class="field">
    <div class="control">
    <%= f.label :country %>
    <%= f.text_field :country %>
     </div>
    </div>

   <div class="field">
    <div class="control">
    <%= f.label :continent %>
    <%= f.text_field :continent %>
     </div>
    </div>

    <div class="buttons">
    <%= f.submit "Add", { class: 'button is-danger' } %>
    </div>
<% end %>