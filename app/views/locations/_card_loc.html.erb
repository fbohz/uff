      <div class="columns is-multiline is-1-mobile">
       
        <% model.each do |l|%>
        <div class="field column is-one-quarter">
          <div class="card">
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <img src="/img/pin.png" alt="Placeholder image">
                  </figure>
                </div>
                <div class="media-content">
                  <p class="title is-4"><%= l.city%></p>
                  <p class="subtitle is-6"> <%="#{ l.country }, #{l.continent}"%> </p>
                </div>
              </div>
                <div class="content">
                <p><%=walls_count_helper(l)%></p>

                <br>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div></div>