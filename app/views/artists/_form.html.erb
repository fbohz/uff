<%= form_with model: artist, local:true do |f| %>
         <div class="field">
         <div class="control">
            <%= f.label :name, size: 50 %>
            <%= f.text_field :name, required: true %>
         </div></div>

         <div class="field">
         <div class="control">
            <%= f.label :hometown, size: 50 %>
            <%= f.text_field :hometown, required: true %>
         </div></div>

         
         <div class="field">
         <div class="control">
            <%= f.label :instagram, size: 50 %>
            <%= f.text_field :instagram %>
         </div></div>                 
         
         <div class="field">
         <div class="control">
            <%= f.label :website, size: 50 %>
            <%= f.text_field :website %>
         </div></div>           

         <div class="field">
         <div class="control">
            <%= f.label :bio %>
            <%= f.text_area :bio, cols: 50, rows: 6, required: true  %>
         </div></div>

         <!-- Might implement add image in future versions-->     

    </div><br>
    <div class="buttons">
    <%= f.submit "Submit", { class: 'button is-danger' } %>
    </div><br>

<% end %>